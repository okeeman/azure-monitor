@model AzureDoctor.Models.CloudService

@{
    ViewBag.Title = "Edit Cloud Service";
}

<hgroup class="title">
    <h1>@ViewBag.Title</h1>
</hgroup>

<div class="center">
    @using (Html.BeginForm()) {
        @Html.ValidationSummary(true)

        <fieldset>
            <legend>Cloud Service</legend>
            @Html.HiddenFor(model => model.CloudServiceID)
            @Html.HiddenFor(model => model.SubscriptionRecordID)
            @Html.HiddenFor(model => model.Status)

            <div class="editor-label">
                @Html.LabelFor(model => model.CloudServiceName)
            </div>

            <div class="editor-field">
                @Html.EditorFor(model => model.CloudServiceName)
                @Html.ValidationMessageFor(model => model.CloudServiceName)
            </div>

            <p>
                <input type="submit" value="Save" />
            </p>
        </fieldset>
    }

    <div>
        @Html.ActionLink("Back to Overview", "Overview")
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
