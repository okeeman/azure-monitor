@model AzureDoctor.User

@{
    ViewBag.Title = "Create";
}

<h2>Add your Cloud Service to Azure Doctor's monitoring service</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>User</legend>

        <div class="editor-label">
            @Html.LabelFor(model => model.SubscriptionID)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.SubscriptionID)
            @Html.ValidationMessageFor(model => model.SubscriptionID)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Thumbprint)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Thumbprint)
            @Html.ValidationMessageFor(model => model.Thumbprint)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.ServiceName)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.ServiceName)
            @Html.ValidationMessageFor(model => model.ServiceName)
        </div>

        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
