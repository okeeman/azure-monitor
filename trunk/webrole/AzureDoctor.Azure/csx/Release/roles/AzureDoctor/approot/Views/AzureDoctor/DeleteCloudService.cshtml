@model AzureDoctor.Models.CloudService

@{
    ViewBag.Title = "Delete Cloud Service";
}

<hgroup class="title">
    <h1>@ViewBag.Title</h1>
</hgroup>

<div class="center">
    <h3>Are you sure you want to delete this?</h3>
    <fieldset>
        <legend>CloudService</legend>
        <div class="display-label">
            @Html.DisplayNameFor(model => model.CloudServiceName)
        </div>

        <div class="display-field">
            @Html.DisplayFor(model => model.CloudServiceName)
        </div>
    </fieldset>

    @using (Html.BeginForm()) {
        <p>
            <input type="submit" value="Delete" /> 
            <br>@Html.ActionLink("Back to Overview", "Overview")
        </p>
    }
</div>
